<h1>Listing items</h1>

<table>
  <tr>
    <th>Quantity</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Invoice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.quantity %></td>
    <td><%= item.amount %></td>
    <td><%= item.description %></td>
    <td><%= item.invoice_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

